#Declare Screens

<Label>:
    color:  (0,0,0,1) 

<Button>:
    background_color:(0,0.5,0.5,0.4)
    
<Screen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<MyScreenManager>:
    id:screen_manager
    name:"screen_manager"
    
    MainScreen:
        name:"GUI"
        manager:screen_manager
    ProgressScreen:
        id:ProgressScreen
        name:"ProgressScreen"
        manager:screen_manager
    AdvancedScreen:
        name:"AdvancedScreen"
        manager:screen_manager
    FileOpen:
        name:"FileOpen"
        manager:screen_manager
    Outdir:
        name:"Outdir"
        manager:screen_manager
    ResultsScreen:
        name:"ResultsScreen"
        manager:screen_manager
        total_min:ProgressScreen.total_min
        frame_count:ProgressScreen.frame_count
        hitrate: ProgressScreen.hitrate
        len_annotations: ProgressScreen.len_annotations
        output_args:ProgressScreen.output_args
        output_annotations:ProgressScreen.output_annotations
    ErrorScreen:
        name:"ErrorScreen"
        manager:screen_manager
    
<MainScreen>:
    BoxLayout:
        padding:[10,10,10,10]
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                orientation:"horizontal"
                Image:
                    source:"images/DeepMeerkatLogo.png"
                    allow_stretch: True
                Label:
                    text:"DeepMeerkat"
                    font_size:45
                Label:
                    size_hint_y:0.2
                    size_hint_x:0.5
                    text_size: self.size
                    halign:"right"
                    text:"v0.0.2"
                    font_size:12
            BoxLayout:
                size_hint_x:0.25
                orientation: 'vertical'
                Button:
                    text:"Advanced \n settings"
                    markup:True
                    on_press: root.gotoAdvanced(app.root)
                Button:
                    text:"Help"
                    on_press: root.help_site()   
        BoxLayout:
            orientation:"horizontal"
            Button:
                size_hint_x:0.5
                text:"Select input"
                font_size:25
                on_press:root.gotoFileOpen(app.root)
            Label:
                text: app.input_file
                markup: True
                font_size:20
        BoxLayout:
            orientation:"horizontal"
            Button:
                size_hint_x:0.5
                text:"Output Directory"
                font_size:25
                on_press:root.gotoOutdir(app.root)
            Label:
                text: app.output_file
                markup: True
                font_size:20
        Button: 
            text:"Run"
            font_size:45
            size_hint:(1,0.8)
            background_color: (1,1,0,0.5) if self.state == 'normal' else (0,0,0,1)
            on_release:root.run_press(app.root)
<FileOpen>:
    name:"FileOpen"
    BoxLayout:
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.wd
            dirselect:"True"
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            size_hint_y:1.5
            filters:["*.TLV","*.tlv","*.avi",".AVI","*.mpg","*.MPG","*.mp4","*.MP4","*.mod","*.MOD","*.mts","*.MTS","*.wmv","*.WMV","*.mov","*.MOV","*.mpeg-4","*.MPEG-4","*.DTS","*.VOB","*.MJPEG","*.MPEG","*.mpeg","*.mkv","*.MKV"]
        Label:
            text: "Select above or type path below"
            size_hint_y:0.25
        TextInput:
            id: text_input
            size_hint_y:0.3
            on_text_validate: filechooser.path=root.change_path(text_input.text,filechooser.path)
            font_size: 30
            multiline: False
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: "Cancel"
            on_release: text_input.text="";root.gotoMain(app.root)
        Button:
            text: "Select"
            on_release: app.input_file=text_input.text; app.MM.args.input=text_input.text; root.gotoMain(app.root)
<Outdir>:
    name:"Outdir"
    text_input:root.wd
    BoxLayout:
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            dirselect:"True"
            path:root.wd
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            size_hint_y:1.5
        Label:
            text: "Select above or type path below"
            size_hint_y:0.25
        TextInput:
            id: text_input
            size_hint_y:0.3
            text:root.wd
            on_text_validate: filechooser.path=root.change_path(text_input.text,filechooser.path)
            font_size: 30
            multiline: False
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: "Cancel"
            on_release: text_input.text=""; root.gotoMain(app.root)
        Button:
            text: "Select"
            on_release: app.output_file=text_input.text; app.MM.args.output=text_input.text; root.gotoMain(app.root)

<AdvancedScreen>
    on_enter:app.MM.mode='advanced'
    BoxLayout:
        orientation:'vertical'
        Button:
            text: "Back"
            size_hint:(0.5,.5)
            pos_hint:{'top':0}
            on_press:root.gotoMain(app.root)
        BoxLayout:
            size_hint_x:0.75
            Label:
                text: "Draw Motion Objects"
            CheckBox:
                active: False
                on_active:app.MM.args.draw_box=self.active
        BoxLayout:
            size_hint_x:0.75
            Label:
                text: "Overlay annotations on image"
            CheckBox:
                active: False
                on_active:app.MM.args.write_text=self.active
        BoxLayout:
            size_hint_x:0.75
            Label:
                text: "Multithreaded"
            CheckBox:
                active: False
                on_active:app.MM.args.threaded=self.active
        BoxLayout:
            size_hint_x:0.75
            Label:
                text: "Training mode"
            CheckBox:
                active: False
                on_active:app.MM.args.training=self.active;app.MM.args.tensorflow=not self.active
        BoxLayout:
            orientation:"horizontal"
        Label:
            font_size:25
            text:"Tensorflow threshold"
        TextInput:
            size_hint_y:0.5
            text:str(0.95)
            on_text: app.MM.args.tensorflow_threshold=self.text
            font_size:25
            multiline:False
        Label:
            font_size:25
            text:"Path to tensorflow model"
        TextInput:
            size_hint_y:0.5
            text:str(app.MM.args.path_to_model)
            on_text: app.MM.args.path_to_model=self.text
            font_size:20
            multiline:False

<ProgressScreen>
    on_enter: root.MotionM(app.MM)
    on_waitflag: if self.waitflag==1: root.manager.current="ResultsScreen"
    on_errorflag: if self.errorflag==1: root.gotoErrorScreen(app.root)

    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint:(1,1)
            pos_hint:{'center_y':1}
            orientation:'vertical'
            Label:
                text: "[b]Classification Model:[/b] " + str(root.tensorflow_loaded)
                font_size:20
                color:(1,0,0,0.5) if root.tensorflow_loaded == 'Loading' else (0,0,0,1)
                markup:True
            Label:
                text: "[b]Running File:[/b] " + str(root.video_name) + " (%d/%d)" % (root.video_id,root.video_count)
                markup: True
                font_size:20
                color: (1,0,0,0.5) if root.tensorflow_loaded == 'Loading' else (0,0,0,1)
            Label:
                text: "[b]Output Directory:[/b] " + str(app.output_file)
                markup: True
                font_size:20
        BoxLayout:
            size_hint:(0.9,1)
                                          
<ResultsScreen>
    BoxLayout:
        orientation:'vertical'
        Button:
            text: "Restart"
            size_hint:(0.2,.3)
            pos_hint:{'top':0}
            on_press:root.gotoMain(app.root)
        Label:
            text: "[b]Input File:[/b] " + str(app.MM.args.input)
            markup: True
            font_size:20
        Label:
            text: "[b]Output Directory:[/b] " + str(app.output_file)
            markup: True
            font_size:22
        Label:
            text: "[b]Run time:[/b] " + str(round(root.total_min,2)) + " min"
            markup: True
            font_size:22
        Label:
            text: "Returned " + str(root.len_annotations) + " frames " + "from " + str(root.frame_count) + " (" + str(root.hitrate) + "%)" 
            font_size:20
        Button:
            text: "Open Output Folder"
            size_hint:(1,0.5)
            on_press: root.openparfile(app.MM)    
<ErrorScreen>
    on_enter:root.getMessage(app.root)
    BoxLayout:
        orientation:'vertical'
        Button:
            text:"Restart"
            on_press:root.gotoMain(app.root)
            size_hint:(0.25,0.4)
        Label:
            text: "Error occurred!"
            font_size:20
        TextInput:
            id:"emessage'
            text: root.em
            size_hint:(1,2)       
        Label:
            text: "If you believe this is a bug, submit the parameter log,\na copy of your error, and a description of your video to the link below."            
        Button:
            text: "Send Error Report"
            on_press: root.help_issue()
            size_hint:(1,0.5)

    